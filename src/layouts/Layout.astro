---
import "../styles/styles.css";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

const { titolPagina } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>PokeCode -- {titolPagina}</title>
		<!-- Favicon -->
		<link rel="icon" href="imgs/icon/favicon.png" />
		<!-- Swiper-->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
		<script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
		<!--Plausible-->
		<script defer data-domain="pokecode.net" src="https://analytics.dev.pokecode.net/js/script.js"></script>
	</head>
	<body class="home">
		<div id="page" class="site">
			<Nav />
			<main id="primary" class="site-main">
				<slot />
				<Footer />
			</main>
		</div>
		<!-- Javascripts -->

		<script src="../javascript/divScrollApear_gsap.js"></script>
		<!-- <script src="js/divScrollApear_gsap.js" type="text/javascript"></script> -->
		<script src="../javascript/navigation.js"></script>
		<script src="../javascript/menu.js"></script>
		<script src="../javascript/animation.js"></script>
		<script src="../javascript/headerSticky.js"></script>
		<script src="../javascript/parallax.js"></script>
		<!-- ...Javascripts -->
	</body>
</html>
